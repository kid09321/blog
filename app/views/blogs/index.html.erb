<div class="header">
  <div class="header-inner">
    <%= render 'shared/navbar' %>
  </div>
</div>
<div>
</div>
<script>
  // 滾動捲軸會讓header縮小
  $(document).on("scroll", function(){
    if
      ($(document).scrollTop() > 100){
      $(".header").addClass("shrink");
      updateSliderMargin();
    }
    else
    {
      $(".header").removeClass("shrink");
      updateSliderMargin();
    }
  });
</script>
