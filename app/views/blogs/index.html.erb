<div class="container">
  <ul class="bxslider">
    <a href="<%= @slider_link_1.try(:url) %>">
      <li>
        <img src="/uploads/sliders/slider-1.jpg" width="950" height="570" data-url="<%= @slider_link_1.try(:url) %>"/>
      </li>
    </a>
    <a href="<%= @slider_link_2.try(:url) %>">
      <li>
        <img src="/uploads/sliders/slider-2.jpg" width="950" height="570" data-url="<%= @slider_link_2.try(:url) %>"/>
      </li>
    </a>
    <a href="<%= @slider_link_3.try(:url) %>">
      <li>
        <img src="/uploads/sliders/slider-3.jpg" width="950" height="570"data-url="<%= @slider_link_3.try(:url) %>"/>
      </li>
    </a>
  </ul>
</div>
<div class="container">
  <div class="articles">
    <% @articles.each do |article| %>
    <div class="row">
      <div class="col-md-6">
        <div class="image">
          <a href="<%= blog_path(article) %>">
            <img src="<%= article.first_image_link %>" width="477" height="236"/>
          </a>
        </div>
      </div>
      <div class="col-md-6 brief">
        <div class="title">
          <%= article.title%>
        </div>
        <div class="show-article">
          <%= truncate(article.only_words, length: 60) %>
        </div>
      </div>
      <hr>
    </div>
    <% end %>
  </div>
</div>
