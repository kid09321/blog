  $(document).ready(function(){
    $('.bxslider').bxSlider({
      auto: true,
      autoControllers: true,
      slideWidth: 950,
      captions: true,
      hyperlinks:true
    });
    $('.page').click(function(){
      page = $(this).text();
      all_pages = <%= @all_pages %>;
      if (page != '<' && page != '>'){
        window.location.replace("/?page="+page);
      } else if (page == '<') {
        window.location.replace("/?page=1");
      } else {
        window.location.replace("/?page="+ all_pages);
      }
    })
  });
</script>
