<div class="wrapper">
  <div class="login-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-field">
      <%= f.label :email ,class:"login-label" %><br />
      <%= f.email_field :email, autofocus: true, style:'background-color:white' %>
    </div>

    <div class="login-field">
      <%= f.label :password,class:"login-label" %><br />
      <%= f.password_field :password, autocomplete: "off", style:'background-color:white' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="login-field remember_me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="login-actions">
      <%= f.submit "Log in", class:'btn btn-primary'%>
    </div>
  <% end %>
  <div class="forget-password">
    <%= render "devise/shared/links" %>
  </div>
  </div>
</div>
